<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:w="urn:import:org.openremote.manager.client.widget">

    <ui:with field="constants" type="org.openremote.manager.client.i18n.ManagerConstants"/>
    <ui:with field="themeStyle" type="org.openremote.manager.client.ThemeStyle"/>

    <ui:style>
        .popup {
            z-index: 10;
        }

        .popup, .panel {
            width: 15em;
            height: 10em;
        }

        .panel {
        }

        .header {
            font-weight: 700;
            padding: 0.4em;
            white-space: nowrap;
            overflow: hidden;
            text-overflow: ellipsis;
        }

        .content {
            overflow: auto;
            padding: 0.4em;
        }

        .grid {
            flex: auto;
        }

        .footer {
            padding: 0.4em;
        }
    </ui:style>

    <g:PopupPanel glassEnabled="false" addStyleNames="{style.popup} {themeStyle.PopupPanel}">
        <g:HTMLPanel styleName="flex layout vertical" addStyleNames="{style.panel}">
            <g:HTMLPanel styleName="layout horizontal" addStyleNames="{style.header} {themeStyle.PopupPanelHeader}">
                <g:Label ui:field="userLabel"/>
            </g:HTMLPanel>
            <g:HTMLPanel styleName="flex layout vertical"
                         addStyleNames="{style.content} {themeStyle.PopupPanelContent}">

                <ul class="or-UnorderedList {themeStyle.UnorderedList}">
                    <li>
                        <w:Hyperlink ui:field="editProfileLink"
                                     addStyleNames="{themeStyle.Hyperlink}"
                                     text="{constants.editAccount}"/>
                    </li>
                </ul>

            </g:HTMLPanel>
            <g:HTMLPanel styleName="layout horizontal center-center"
                         addStyleNames="{style.footer} {themeStyle.PopupPanelFooter}">
                <w:PushButton ui:field="logoutButton"
                              icon="sign-out"
                              text="{constants.logout}"
                              addStyleNames="{themeStyle.PushButton}"/>
            </g:HTMLPanel>
        </g:HTMLPanel>
    </g:PopupPanel>

</ui:UiBinder>

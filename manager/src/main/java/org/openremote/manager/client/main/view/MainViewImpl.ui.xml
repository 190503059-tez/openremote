<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:w="urn:import:org.seamless.gwt.component.client.widget">

    <ui:style>
        .headerPanel {
            background-color: lightcyan;
            color: black;
        }

        .contentPanel {
            background-color: lightgreen;
            color: black;
        }

    </ui:style>

    <g:DockLayoutPanel unit="EM">
        <g:north size="5">
            <g:SimpleLayoutPanel ui:field="headerPanel" addStyleNames="{style.headerPanel}"/>
        </g:north>
        <g:center>
            <g:SimpleLayoutPanel ui:field="contentPanel" addStyleNames="{style.contentPanel}"/>
        </g:center>
    </g:DockLayoutPanel>

</ui:UiBinder>
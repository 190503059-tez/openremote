<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:w="urn:import:org.openremote.manager.client.widget">

    <ui:with field="managerMessages" type="org.openremote.manager.client.i18n.ManagerMessages"/>
    <ui:with field="widgetStyle" type="org.openremote.manager.client.style.WidgetStyle"/>
    <ui:with field="themeStyle" type="org.openremote.manager.client.style.ThemeStyle"/>

    <ui:style type="org.openremote.manager.client.assets.asset.AssetViewImpl.Style">
        .navItem {
            margin: 0 1em;
        }

        .formMessages {
            max-width: 30em;
        }

        .nameTextBox,
        .typeTextBox,
        .attributeTextBox {
            width: 25em;
        }

        .mapWidget {
            margin: 0 1em;
            width: 25em;
            height: 15em;
        }

</ui:style>

    <w:FlexSplitPanel handleStyle="{widgetStyle.SplitPanelHandle} {themeStyle.SplitPanelHandle}"
                      firstPanelWidth="250"
                      firstPanelMinWidth="250"
                      secondPanelMinWidth="1000">

        <w:first>
            <g:HTMLPanel ui:field="sidebarContainer"
                         styleName="flex layout vertical {widgetStyle.SidebarContent} {themeStyle.SidebarContent}"/>
        </w:first>

        <w:second>
            <g:HTMLPanel styleName="flex layout vertical">
                <g:HTMLPanel
                        styleName="layout horizontal center end-justified {widgetStyle.SecondaryNavHorizontal} {themeStyle.SecondaryNavHorizontal}">

                    <w:Hyperlink
                            addStyleNames="{style.navItem} {widgetStyle.SecondaryNavItem} {themeStyle.SecondaryNavItem}"
                            icon="dashboard"
                            targetHistoryToken="assets:"
                            text="{managerMessages.showDashboard}"/>

                    <w:Hyperlink
                            addStyleNames="{style.navItem} {widgetStyle.SecondaryNavItem} {themeStyle.SecondaryNavItem}"
                            icon="plus-square"
                            targetHistoryToken="asset:"
                            text="{managerMessages.createAsset}"/>

                </g:HTMLPanel>

                <div class="flex {widgetStyle.MainContent} {themeStyle.MainContent}">

                    <g:FlowPanel
                            styleName="layout horizontal {style.formMessages} {widgetStyle.FormMessages} {themeStyle.FormMessages} success"
                            visible="false">
                        <w:IconLabel icon="check"
                                     addStyleNames="{widgetStyle.MessagesIcon} {themeStyle.MessagesIcon}"/>
                        <g:FlowPanel ui:field="formMessagesSuccess"/>
                    </g:FlowPanel>

                    <g:FlowPanel
                            styleName="layout horizontal {style.formMessages} {widgetStyle.FormMessages} {themeStyle.FormMessages} error"
                            visible="false">
                        <w:IconLabel icon="warning"
                                     addStyleNames="{widgetStyle.MessagesIcon} {themeStyle.MessagesIcon}"/>
                        <g:FlowPanel ui:field="formMessagesError"/>
                    </g:FlowPanel>

                    <div class="{widgetStyle.Headline1} {themeStyle.Headline1}">
                        <g:InlineLabel text="{managerMessages.editAsset}"/>
                    </div>

                    <div class="{widgetStyle.HeadlineSub} {themeStyle.HeadlineSub}">
                        <span class="required">*</span>
                        <g:InlineLabel text="{managerMessages.requiredFields}"/>
                    </div>

                    <g:HTMLPanel styleName="flex layout horizontal">

                        <w:Form ui:field="form" addStyleNames="flex">
                            <w:FormGroup ui:field="nameGroup">
                                <w:label>
                                    <w:FormLabel text="{managerMessages.assetName}" required="true"/>
                                </w:label>
                                <w:field>
                                    <w:FormField>
                                        <g:TextBox ui:field="nameInput"
                                                   addStyleNames="{style.nameTextBox} {widgetStyle.FormControl} {themeStyle.FormControl} {widgetStyle.FormInputText} {themeStyle.FormInputText}"/>
                                    </w:FormField>
                                </w:field>
                            </w:FormGroup>

                            <w:FormGroup>
                                <w:label>
                                    <w:FormLabel text="{managerMessages.createdOn}"/>
                                </w:label>
                                <w:field>
                                    <w:FormField>
                                        <g:Label ui:field="createdOnLabel"
                                                   addStyleNames="{widgetStyle.FormControl} {themeStyle.FormControl} {widgetStyle.FormValueLabel} {themeStyle.FormValueLabel}"/>
                                    </w:FormField>
                                </w:field>
                            </w:FormGroup>

                            <w:FormGroup ui:field="typeGroup">
                                <w:label>
                                    <w:FormLabel text="{managerMessages.assetType}" required="true"/>
                                </w:label>
                                <w:field>
                                    <w:FormField>
                                        <g:TextBox ui:field="typeInput"
                                                   addStyleNames="{style.typeTextBox} {widgetStyle.FormControl} {themeStyle.FormControl} {widgetStyle.FormInputText} {themeStyle.FormInputText}"/>
                                    </w:FormField>
                                </w:field>
                            </w:FormGroup>

                            <w:FormGroup>
                                <w:label>
                                    <w:FormLabel text="{managerMessages.location}"/>
                                </w:label>
                                <w:field>
                                    <w:FormField>
                                        <g:Label ui:field="locationLabel"
                                                 addStyleNames="{widgetStyle.FormControl} {themeStyle.FormControl} {widgetStyle.FormValueLabel} {themeStyle.FormValueLabel}"/>
                                    </w:FormField>
                                </w:field>
                            </w:FormGroup>

                            <g:FlowPanel ui:field="attributesContainer"/>

                            <w:FormGroup>
                                <w:field>
                                    <w:FormField>
                                        <w:PushButton ui:field="updateButton"
                                                      addStyleNames="{widgetStyle.FormControl} {themeStyle.FormControl} {widgetStyle.FormButtonPrimary} {themeStyle.FormButtonPrimary} {widgetStyle.PushButton} {themeStyle.PushButton}"
                                                      text="{managerMessages.updateAsset}"
                                                      visible="false"
                                                      icon="save"/>
                                        <w:PushButton ui:field="createButton"
                                                      addStyleNames="{widgetStyle.FormControl} {themeStyle.FormControl} {widgetStyle.FormButtonPrimary} {themeStyle.FormButtonPrimary} {widgetStyle.PushButton} {themeStyle.PushButton}"
                                                      text="{managerMessages.createAsset}"
                                                      visible="false"
                                                      icon="save"/>
                                        <w:PushButton ui:field="deleteButton"
                                                      addStyleNames="{widgetStyle.FormControl} {themeStyle.FormControl} {widgetStyle.FormButtonDanger} {themeStyle.FormButtonDanger} {widgetStyle.PushButton} {themeStyle.PushButton}"
                                                      text="{managerMessages.deleteAsset}"
                                                      visible="false"
                                                      icon="trash"/>
                                    </w:FormField>
                                </w:field>
                            </w:FormGroup>

                        </w:Form>

                        <w:MapWidget ui:field="mapWidget"
                                     addStyleNames="{style.mapWidget} {widgetStyle.ItemWithBorder} {themeStyle.ItemWithBorder}"/>

                    </g:HTMLPanel>

                </div>
            </g:HTMLPanel>

        </w:second>
    </w:FlexSplitPanel>

</ui:UiBinder>
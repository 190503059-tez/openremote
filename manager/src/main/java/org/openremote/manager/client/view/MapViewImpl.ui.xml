<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:o="urn:import:org.openremote.manager.client.ui"
             xmlns:g="urn:import:com.google.gwt.user.client.ui">

    <ui:style>
        .mapContainer {
            position: absolute;
            top: 0;
            bottom: 0;
            width: 100%;
            background-color: white;
        }
    </ui:style>

    <g:HTMLPanel>

        <o:Map ui:field="map" addStyleNames="{style.mapContainer}"></o:Map>

    </g:HTMLPanel>

</ui:UiBinder>
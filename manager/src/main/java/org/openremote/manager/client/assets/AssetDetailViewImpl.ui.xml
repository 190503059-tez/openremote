             xmlns:b="urn:import:org.gwtbootstrap3.client.ui">

    <g:ScrollPanel>
        <g:VerticalPanel>

            <g:Label>ASSET DETAILS</g:Label>
            <b:Button ui:field="sendMessageButton" text="Send message to server"/>

<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
>

    <ui:style>
        .headerPanel {
            background-color: red;
            color: black;
        }

        .contentPanel {
            background-color: lightgreen;
            color: black;
        }

        .footerPanel {
            background-color: lightslategray;
            color: black;
        }

        .sidePanel {
            background-color: lightgoldenrodyellow;
            color: black;
        }

        .no-padding {
            padding: 0;
        }
    </ui:style>

    <ui:with field="constants" type="org.openremote.manager.client.i18n.ManagerConstants"/>

    <g:HeaderPanel>
        <g:SimpleLayoutPanel height="50px" ui:field="headerPanel" addStyleNames="{style.headerPanel}"/>
        <g:ResizeLayoutPanel width="100%" height="100%">
            <g:SplitLayoutPanel ui:field="bodyPanel">
                <g:west size="200">
                    <g:SimpleLayoutPanel ui:field="leftSidePanel" addStyleNames="{style.sidePanel}"/>
                </g:west>
                <g:center>
                    <g:SimpleLayoutPanel ui:field="contentPanel" addStyleNames="{style.contentPanel}"/>
                </g:center>
            </g:SplitLayoutPanel>
        </g:ResizeLayoutPanel>
    </g:HeaderPanel>


{
  "version": "1.0.4",
  "npmClient": "yarn",
  "useWorkspaces": true,
  "command": {
    "publish": {
      "ignoreChanges": [
        "*.js",
        "*.md"
      ],
      "message": "UI updates: Set version for publishing",
      "registry": "https://npm.pkg.github.com"
    }
  },
  "packages": [
    "ui/component/*",
    "ui/app/*"
  ]
}

<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:b="urn:import:org.gwtbootstrap3.client.ui"
>

    <ui:with field="constants" type="org.openremote.manager.client.i18n.ManagerConstants"/>

    <ui:style>
    </ui:style>

    <b:Modal ui:field="modal" size="SMALL" title="{constants.loginTitle}" closable="false" dataBackdrop="STATIC"
             dataKeyboard="true" fade="true">
        <b:ModalBody>
            <b:Alert type="DANGER" ui:field="alertLogin" visible="false"></b:Alert>
            <b:Alert type="DANGER" ui:field="alertError" visible="false">
                <g:Label>An error has occurred while contacting the server</g:Label>
            </b:Alert>
            <b:Form ui:field="formLogin">
                <b:FieldSet>
                    <b:FormGroup>
                        <b:FormLabel showRequiredIndicator="true" for="username"
                                     text="{constants.username}"></b:FormLabel>
                        <b:InlineHelpBlock iconType="EXCLAMATION_TRIANGLE"/>
                        <b:TextBox validateOnBlur="true" allowBlank="false" ui:field="inputUsername" b:id="username"/>
                    </b:FormGroup>
                    <b:FormGroup>
                        <b:FormLabel showRequiredIndicator="true" for="password"
                                     text="{constants.password}"></b:FormLabel>
                        <b:InlineHelpBlock iconType="EXCLAMATION_TRIANGLE"/>
                        <b:Input validateOnBlur="true" allowBlank="false" type="PASSWORD" ui:field="inputPassword"
                                 name="password"/>
                    </b:FormGroup>
                </b:FieldSet>
            </b:Form>
        </b:ModalBody>
        <b:ModalFooter>
            <b:Button ui:field="btnSubmit" type="PRIMARY">LOGIN</b:Button>
        </b:ModalFooter>
    </b:Modal>
</ui:UiBinder>
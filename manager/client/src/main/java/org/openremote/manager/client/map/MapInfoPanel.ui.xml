<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:w="urn:import:org.openremote.manager.client.widget"
             xmlns:widget="urn:import:org.openremote.components.client.widget">

    <ui:with field="managerMessages" type="org.openremote.manager.client.i18n.ManagerMessages"/>
    <ui:with field="widgetStyle" type="org.openremote.components.client.style.WidgetStyle"/>

    <ui:style type="org.openremote.manager.client.map.MapInfoPanel.Style">
        .popup {
            z-index: 10;
        }

        .panel {
            width: 28em;
        }

        .content {
            overflow: auto;
        }

        .infoItem {
            white-space: nowrap;
            margin: 8px;
        }

        .infoItemIcon {
            width: 1.4em;
            text-align: center;
            margin-right: 0.4em;
            opacity: 0.4;
        }

        .infoItemLabel {
            font-size: 14px;
            line-height: 16px;
            padding: 0 !important;
        }

        .infoItemValue {
            font-size: 18px;
            line-height: 20px;
        }
    </ui:style>

    <widget:PopupPanel glassEnabled="false" styleName="{style.popup} {widgetStyle.PopupPanel}">
        <g:HTMLPanel ui:field="panel"
                     styleName="layout vertical {style.panel}">

            <g:FlowPanel ui:field="contentPanel"
                         styleName="flex layout vertical"
                         addStyleNames="{style.content} {widgetStyle.PopupPanelContent}"/>

        </g:HTMLPanel>

    </widget:PopupPanel>

</ui:UiBinder>

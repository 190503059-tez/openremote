<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:w="urn:import:org.openremote.manager.client.widget">

    <ui:style>
        .footer {
            font-size: small;
            padding: 0.4em;
        }

        .navItem {
            margin: 0 1em;
        }

        .brand {
            font-size: x-small;
        }
    </ui:style>

    <ui:with field="managerMessages" type="org.openremote.manager.client.i18n.ManagerMessages"/>
    <ui:with field="widgetStyle" type="org.openremote.manager.client.style.WidgetStyle"/>

    <g:HTMLPanel styleName="flex layout horizontal end-justified center" addStyleNames="{style.footer} {widgetStyle.Footer}">

        <w:PushButton
                ui:field="fullscreenButton"
                addStyleNames="{style.navItem} {widgetStyle.SecondaryNavItem}"
                icon="expand"
                text="{managerMessages.fullscreen}"/>

        <div class="{widgetStyle.Hyperlink} {style.brand}">
            <g:Anchor href="http://openremote.com/">&#169; OpenRemote Inc.</g:Anchor>
        </div>
    </g:HTMLPanel>

</ui:UiBinder>
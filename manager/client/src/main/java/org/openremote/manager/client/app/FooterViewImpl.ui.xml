<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>

    <ui:style>
        .footer {
            font-size: x-small;
            padding: 0.4em;
        }
    </ui:style>

    <ui:with field="managerMessages" type="org.openremote.manager.client.i18n.ManagerMessages"/>
    <ui:with field="widgetStyle" type="org.openremote.manager.client.style.WidgetStyle"/>
    <ui:with field="themeStyle" type="org.openremote.manager.client.style.ThemeStyle"/>

    <g:HTMLPanel styleName="flex layout end-justified horizontal" addStyleNames="{style.footer} {widgetStyle.Footer} {themeStyle.Footer}">
        <div class="{widgetStyle.Hyperlink} {themeStyle.Hyperlink}">
            <g:Anchor href="http://openremote.com/">&#169; OpenRemote Inc.</g:Anchor>
        </div>
    </g:HTMLPanel>

</ui:UiBinder>
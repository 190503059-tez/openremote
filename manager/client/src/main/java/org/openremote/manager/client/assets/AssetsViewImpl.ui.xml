<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:w="urn:import:org.openremote.manager.client.widget">

    <ui:with field="managerMessages" type="org.openremote.manager.client.i18n.ManagerMessages"/>
    <ui:with field="widgetStyle" type="org.openremote.manager.client.style.WidgetStyle"/>
    <ui:with field="themeStyle" type="org.openremote.manager.client.style.ThemeStyle"/>

    <ui:style>
        .sidebarContent {
            width: 21em;
        }

        .navItem {
            margin-right: 1.2em;
        }

        .navItemFirst {
            margin-left: 0.2em !important;
        }

        .formInputText {
            border-radius: 0.4em;
            font-size: smaller !important;
            padding: 0.4em !important;
            height: 1.08em;
        }
    </ui:style>

    <g:HTMLPanel styleName="flex layout vertical">

        <g:HTMLPanel
                styleName="layout horizontal start-justified {widgetStyle.SecondaryNav} {themeStyle.SecondaryNav}">
            <w:FormInputText ui:field="searchInput"
                             addStyleNames="{style.navItemFirst} {style.formInputText} {widgetStyle.FormControl} {themeStyle.FormControl} {widgetStyle.FormInputText} {themeStyle.FormInputText}"
                             autofocus="true"
                             placeholder="{managerMessages.search}..."/>

            <w:PushButton ui:field="searchButton"
                          addStyleNames="{style.navItem} {widgetStyle.SecondaryNavItem} {themeStyle.SecondaryNavItem}"
                          icon="search"/>

            <w:PushButton ui:field="filterButton"
                          addStyleNames="{style.navItem} {widgetStyle.SecondaryNavItem} {themeStyle.SecondaryNavItem}"
                          text="{managerMessages.filter}"
                          icon="filter"/>

        </g:HTMLPanel>

        <g:HTMLPanel styleName="flex layout horizontal">

            <g:SimplePanel ui:field="assetTreeContainer"
                           addStyleNames="{style.sidebarContent} {widgetStyle.SidebarContent} {themeStyle.SidebarContent}"/>

            <div class="flex {widgetStyle.MainContent} {themeStyle.MainContent}">
                <g:SimplePanel ui:field="assetsContentContainer"/>
            </div>

        </g:HTMLPanel>
    </g:HTMLPanel>

</ui:UiBinder>
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:w="urn:import:org.openremote.manager.client.widget">

    <ui:with field="managerMessages" type="org.openremote.manager.client.i18n.ManagerMessages"/>
    <ui:with field="widgetStyle" type="org.openremote.manager.client.style.WidgetStyle"/>

    <ui:style type="org.openremote.manager.client.admin.agent.AdminAgentImpl.Style">
        .formMessages {
            max-width: 30em;
        }

        .nameInput,
        .descriptionInput {
            width: 30em;
        }

        .attributeStringEditor {
            width: 30em;
        }

        .attributeIntegerEditor {
            width: 10em;
        }

        .attributeFloatEditor {
            width: 5em;
        }

        .attributeBooleanEditor {

        }
    </ui:style>

    <g:HTMLPanel styleName="flex layout vertical">

        <g:FlowPanel
                styleName="layout horizontal {style.formMessages} {widgetStyle.FormMessages} success"
                visible="false">
            <w:IconLabel icon="check" addStyleNames="{widgetStyle.MessagesIcon}"/>
            <g:FlowPanel ui:field="formMessagesSuccess"/>
        </g:FlowPanel>

        <g:FlowPanel
                styleName="layout horizontal {style.formMessages} {widgetStyle.FormMessages} error"
                visible="false">
            <w:IconLabel icon="warning" addStyleNames="{widgetStyle.MessagesIcon}"/>
            <g:FlowPanel ui:field="formMessagesError"/>
        </g:FlowPanel>

        <div class="{widgetStyle.Headline1}">
            <g:InlineLabel text="{managerMessages.editAgent}"/>
        </div>

        <div class="{widgetStyle.HeadlineSub}">
            <span class="required">*</span>
            <g:InlineLabel text="{managerMessages.requiredFields}"/>
        </div>

        <w:Form ui:field="form">
            <w:FormGroup ui:field="nameGroup">
                <w:label>
                    <w:FormLabel text="{managerMessages.agentName}" required="true"/>
                </w:label>
                <w:field>
                    <w:FormField>
                        <w:FormInputText ui:field="nameInput" addStyleNames="{style.nameInput}"/>
                    </w:FormField>
                </w:field>
            </w:FormGroup>

            <w:FormGroup ui:field="descriptionGroup">
                <w:label>
                    <w:FormLabel text="{managerMessages.description}" required="false"/>
                </w:label>
                <w:field>
                    <w:FormField>
                        <w:FormInputText ui:field="descriptionInput" addStyleNames="{style.descriptionInput}"/>
                    </w:FormField>
                </w:field>
            </w:FormGroup>

            <w:FormGroup ui:field="enabledGroup">
                <w:label>
                    <w:FormLabel text="{managerMessages.enabled}"/>
                </w:label>
                <w:field>
                    <w:FormField>
                        <w:FormCheckBox ui:field="enabledCheckBox"/>
                    </w:FormField>
                </w:field>
            </w:FormGroup>

            <w:FormGroup>
                <w:label>
                    <w:FormLabel text="{managerMessages.connectorType}"/>
                </w:label>
                <w:field>
                    <w:FormField>
                        <g:ValueListBox ui:field="connectorListBox"
                                        addStyleNames="{widgetStyle.FormControl} {widgetStyle.FormDropDown}"/>
                    </w:FormField>
                </w:field>
            </w:FormGroup>

            <g:FlowPanel ui:field="attributesContainer"/>

            <w:FormGroup centerJustified="true">
                <w:field>
                    <w:FormField>
                        <w:FormButton ui:field="updateButton" primary="true" text="{managerMessages.updateAgent}"
                                      visible="false" icon="save"/>
                        <w:FormButton ui:field="createButton" primary="true" text="{managerMessages.createAgent}"
                                      visible="false" icon="save"/>
                        <w:FormButton ui:field="deleteButton" text="{managerMessages.deleteAgent}" visible="false"
                                      icon="trash"/>
                        <w:FormButton ui:field="cancelButton" danger="true" text="{managerMessages.cancel}"
                                      icon="close"/>
                    </w:FormField>
                </w:field>
            </w:FormGroup>

        </w:Form>

    </g:HTMLPanel>

</ui:UiBinder>
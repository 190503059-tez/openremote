{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "es5",
    "module": "esNext",
    "moduleResolution": "node",
    "lib": [
      "dom",
      "es2015",
      "es2017",
      "es5",
      "es2015.promise",
      "es2016.array.include"
    ],
    "noEmitOnError": true,
    "strict": true,
    "declaration": true,
    "sourceMap": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true
  }
}